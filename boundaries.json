{
  "elements": [
    {
      "type": "features",
      "pattern": "src/app/features/*"
    },
    {
      "type": "shared",
      "pattern": "src/app/shared/*"
    },
    {
      "type": "core",
      "pattern": "src/app/core/*"
    }
  ],
  "rules": [
    {
      "from": "features",
      "allow": [
        "shared",
        "core",
        "features"
      ]
    },
    {
      "from": "shared",
      "allow": [
        "core",
        "shared"
      ]
    },
    {
      "from": "core",
      "allow": [
        "core"
      ],
      "disallow": [
        "features",
        "shared"
      ]
    }
  ]
}
